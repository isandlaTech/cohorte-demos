<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.cohorte.demos</groupId>
		<artifactId>spellchecker-demo-bundles</artifactId>
		<version>1.0.0</version>
	</parent>
	<artifactId>spellchecker-python</artifactId>
	<version>1.0.0</version>
	<packaging>cohorte-bundle</packaging>

	<!--dependencies>
		<dependency>
		<groupId>org.cohorte.3rdparty</groupId>
		<artifactId>pelix</artifactId>
		<version>0.5.7</version>
		<type>cohorte-bundle</type>
		</dependency>
		</dependencies -->

	<build>
		<plugins>
			<plugin>
				<groupId>org.cohorte.plugins</groupId>
				<artifactId>cohorte-maven-plugin</artifactId>
				<version>1.0.0</version>
				<extensions>true</extensions>
				<configuration>
					<language>python</language>
					<package>
						<skip_package_setup>true</skip_package_setup>
						<skip_package_source>false</skip_package_source>
					</package>
					<test>
						<skip_test>true</skip_test>
					</test>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
